<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/concurs_group_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:text="Сумма" style="@style/AppTheme.TableColumnHeader" android:layout_span="2"/>
        <TableRow >

            <TextView android:text="Мат." style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="Физ." style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="Рус." style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="ИД" style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="ФИО поступающего" style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="Дата рождения" style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="Общ." style="@style/AppTheme.TableColumnHeader" />
            <TextView android:text="Док. обр." style="@style/AppTheme.TableColumnHeader" android:layout_span="10"/>
            <TextView android:text="Примечание" style="@style/AppTheme.TableColumnHeader" />
        </TableRow>
        </TableLayout>

</HorizontalScrollView>